{
  "name": "simple-tailwind-starter",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build:css": "tailwindcss -i ./input.css -o ./css/styles.css",
    "build:ts": "tsc",
    "build": "npm run build:css && npm run build:ts",
    "watch:css": "tailwindcss -i ./input.css -o ./css/styles.css --watch",
    "watch:ts": "tsc --watch",
    "dev": "concurrently \"npm run watch:css\" \"npm run watch:ts\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^25.0.3",
    "concurrently": "^9.2.1",
    "tailwindcss": "^3.0.24",
    "typescript": "^5.9.3"
  }
}
